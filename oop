'''
Python3
Programmazione ad oggetti
'''

class Maglie:

    # Attributi di Classe
    parcoMaglie = 0

    #Metodo costruttore
    def __init__(self,proprietario, marca, modello, taglia, colore):

        # Attributi di Istanza
        self.proprietario = proprietario
        self.marca = marca
        self.modello = modello
        self.taglia = taglia
        self.colore = colore
        
        maglie.parcomaglie +=1

    #Metodo di tipo Get
    def scheda(self):
        return f'\nScheda "{self.proprietario}"\n Marca: {self.marca}\n Modello: {self.modello}\n taglia: {self.taglia}\n colore: {self.colore}' 
    
giovanni = maglia("giovanni","nike","collo a v",xl, "rosso")

marco = maglia("marco","adidas","maniche lunghe",m, "verde")

print("Il tipo di variabile costruita è:")
print(giovanni)
print(marco)

print("\nLa singola scheda è:")
print (giovanni.scheda())
print (marco.scheda())
print("\nmaglie totali: ",maglie.parcoMaglie)

print("\n\naltro metodo per visualizzare le informazioni (__dict__):")

print(giovanni.__dict__)
print(marco.__dict__)
